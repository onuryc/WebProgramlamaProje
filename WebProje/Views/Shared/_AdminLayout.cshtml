
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <title>_AdminLayout</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-primary" style="width: 18%;">
                <div class="d-flex flex-column align-items-center align-items-sm-start pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center p-4 pt-4 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-4 d-none d-sm-inline">Admin Paneli</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start p-3" id="menu">
                        <li class="nav-item">
                            <a href="#" class="nav-link active align-middle px-0 fs-5" id="v-pills-urun-tab" data-bs-toggle="pill" data-bs-target="#v-pills-urun" type="button" role="tab" aria-controls="v-pills-urun" aria-selected="true">
                                <span class="ms-1 d-none d-sm-inline text-light">Urunler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link align-middle px-0 fs-5" id="v-pills-kullanici-tab" data-bs-toggle="pill" data-bs-target="#v-pills-kullanici" type="button" role="tab" aria-controls="v-pills-kullanici" aria-selected="false">
                                <span class="ms-1 d-none d-sm-inline text-light">Kullanicilar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Sign/Logout" class="nav-link align-middle px-0 fs-5">
                                <i class="fa-solid fa-arrow-right-from-bracket text-light ms-1 me-1"></i><span class="ms-1 d-none d-sm-inline text-light">Çıkış Yap</span>
                            </a>
                        </li>
                    </ul>
                    <a href="/" class="p-3 text-light" style="position: fixed; bottom: 0;">
                        Mağaza'ya Geri Dön.
                    </a>
                </div>
            </div>
            <div class="tab-content py-3 px-5 overflow-y-scroll" style="width: 82%;" id="v-pills-tabContent">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
