
@model WebProje.Models.Sınıflar.AnasayfaListe
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://picsum.photos/768?random=1" class="d-block w-100 vh-100" alt="...">
        </div>
        @foreach (var x in Model.BannerListe)
        {
            <div class="carousel-item">
                <img src="@x.BannerURL" class="d-block w-100 vh-100" alt="...">
            </div>
        }

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container mx-auto mt-5">
    <div class="mb-3 d-flex justify-content-between">
        <h4>Öne Çıkanlar</h4>
        <a href="/Products/Index" class="fs-5 all-items">Tümünü Gör <i class="fa-solid fa-caret-right"></i></a>
    </div>
    <div class="row row-cols-1 row-cols-md-4 mb-3 text-center">
        @foreach (var x in Model.UrunListe.Take(8))
        {
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm p-2">
                    <a class="add-basket" href="#">Sepete Ekle  <i class="fa-solid fa-plus"></i></a>
                    <span class="image-item">
                        <img src="@x.UrunResimURL" />
                    </span>
                    <div>
                        <h2 class="my-3 text-secondary fs-5">@x.UrunAdi</h2>
                        <p class="text-dark fw-bold">@x.UrunFiyat TL</p>
                    </div>
                    <p>@x.Aciklama.Substring(0,70) ...</p>
                    <p><a class="btn text-white mt-3" href="/Products/UrunDetay/@x.ID">Detaylara git.</a></p>
                </div>
            </div>
        }


    </div>
</div>


<div class="container mx-auto mt-5">
    <div class="mb-3 d-flex justify-content-between">
        <h4>Öne Çıkan Markalar</h4>
    </div>
    <div class="row row-cols-1 row-cols-md-6 mb-3 text-center">

        @foreach (var x in Model.MarkaListe.Take(6))
                {
                    <div class="col">
                        <a href="#" class="card mb-4 shadow-lg p-2">
                            <div class="image-brand">
                                <img src="@x.MarkaImageURL" width="120" height="120" />
                            </div>
                        </a>
                    </div>
                    }
        </div>
</div>


