@using WebProje.Models.Sınıflar
@model List<Urunler>
@{
    ViewBag.Title = "UrunDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var x in Model)
{
    <div style="width:75%;margin:auto;margin-top:12px; border:1px solid #e8e8e8;">
        <div class="row featurette">
            <div class="col-md-7 order-md-2" style="text-align:center;">
                <h2 class="featurette-heading" style="padding-top:75px">@x.MarkaAdi</h2>
                <p class="lead">@x.UrunAdi</p>
                <h6 style="color:#9e9e9e;font-size:15px">• 12 ay’a varan Taksit Seçenekleri</h6>
                <div>
                    <h3>@x.UrunFiyat TL</h3><br>
                    <a style="padding:2% 16%;border-radius:16px;background-color:#0172f9;color:white;text-decoration:none;" href="#"><i class="fa fa-shopping-cart"></i> Sepete Ekle</a>
                </div>
                <table class="table" style="width:50%;margin-top:6%;float:left;margin-right:1px;">
                    <tbody>
                        <tr>
                            <td><b>Baglantı Türü:</b></td>
                            <td>@x.BaglantiTuru</td>
                        </tr>
                        <tr>
                            <td><b>Kullanım Tipi:</b></td>
                            <td>@x.KullanimTipi</td>
                        </tr>
                    </tbody>
                </table>
                <table class="table" style="width:45%;margin-top:6%;float:right;">
                    <tbody>
                        <tr>
                            <td><b>Dayanıklılık</b></td>
                            <td>@x.Dayaniklilik</td>
                        </tr>
                        <tr>
                            <td><b>Garanti Süresi (Ay):</b></td>
                            <td>@x.GarantiSuresi</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5 order-md-1 bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="500" height="500">
                <img src="@x.UrunResimURL" width="94%" style="padding-left:6%;padding-bottom:0;" class="my-4">
                <div class="container text-center my-3">
                    <div id="recipeCarousel" class="carousel slide w-77" style="padding-left:2%;padding-top:0;" data-ride="carousel">
                        <div class="carousel-inner w-100" role="listbox">
                            <div class="carousel-item row no-gutters active">
                                <div class="col-3 float-left"><img style="padding-right:10%;" class="img-fluid" src="@x.UrunResimURL"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3 mb-5 py-1" style="width:100%;margin:auto;background-color:#e8e8e8;text-align:center;font-size:18px;"><b>Ürün Açıklaması</b></div>
    <div class="container mx-auto">
        @x.Aciklama
        <b>
            <div class="text-center mt-2 mb-4">
                <p>
                    <br><b>Boyutlar ve Ağırlık</b><br>
                    1. Yükseklik: 21,6mm | 2. Genişlik: 365,5mm | 3. Derinlik: 254mm
                </p>
            </div>

            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <td><b>Baglantı Türü:</b></td>
                        <td>@x.BaglantiTuru</td>
                    </tr>
                    <tr>
                        <td><b>Kullanım Tipi:</b></td>
                        <td>@x.KullanimTipi</td>
                    </tr>
                    <tr>
                        <td><b>Dayanıklılık</b></td>
                        <td>@x.Dayaniklilik</td>
                    </tr>
                    <tr>
                        <td><b>Garanti Süresi (Ay):</b></td>
                        <td>@x.GarantiSuresi</td>
                    </tr>
                </tbody>
            </table>
        </b>
    </div>
}

